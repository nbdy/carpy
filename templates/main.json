{
  "dependencies": ["gps", "network"],

  "items": {
    "grid": {
      "class": "grid",
      "action": "add",
      "items": {
        "lbl_wifi_overview": {
          "class": "label",
          "text": "wifi overview:",
          "color": "#ffffff",
          "action": "add"
        },

        "lbl_wifi_status": {
          "class": "label",
          "text": "status:",
          "color": "#ffffff",
          "action": "attach_next_to",
          "params": {
            "neighbor_key": "lbl_wifi_overview",
            "position_type": "bottom",
            "width": 1,
            "height": 1
          }
        },

        "lbl_wifi_status_value": {
          "class": "label",
          "text": "{{ ctx.network.wifi_status() }}",
          "color": "#ffffff",
          "action": "attach_next_to",
          "params": {
            "neighbor_key": "lbl_wifi_status",
            "position_type": "right",
            "width": 1,
            "height": 1
          }
        }
      }
    }
  }
}