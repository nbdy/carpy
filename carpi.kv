<Map>:
    name: "map"

    GridLayout:
        id: map
        orientation: "vertical"
        padding: [4, 4, 4, 4]

        MapView:
            id: map_view
            lat: root.gps.latitude if root.gps.latitude is not None else 48.137154
            lon: root.gps.longitude if root.gps.longitude is not None else 11.576124
            zoom: 22


        Button:
            id: btn_back
            text: "back"
            pos: (8, 10)
            size: pt(228), pt(30)
            on_press:
                root.manager.current = "main_menu"


