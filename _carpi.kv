<Map>:
    name: "map"

    FloatLayout:
        id: map
        orientation: "vertical"
        padding: [4, 4, 4, 4]

        BoxLayout:
            id: actual_map
            orientation: "vertical"
            size_hint: 0.98, 0.82
            pos_hint: {'pos': (0.01, 0.17)}

            MapView:
                id: map_view
                lat: root.gps.current_position['latitude'] if root.gps.current_position is not None else 48.137154
                lon:root.gps.current_position['latitude'] if root.gps.current_position is not None else 11.576124
                zoom: 22

        Button:
            id: btn_back
            text: "back"
            size_hint: 0.98, 0.15
            pos_hint: {'pos': (0.01, 0.01)}
            on_press:
                root.manager.current = "main_menu"


